{% extends 'base.html.twig' %}

{% block title %}VIP list{% endblock %}

{% block body %}
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-4 p-5">
            {{ form(form) }}
        </div>
        <div class="col-8 p-5">
            <table class="table table-striped border border-1 border-black">
                <thead>
                <tr class="text-center">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for people in peoples %}
                    <tr class="text-center">
                        <td>{{ people.firstName }}</td>
                        <td>{{ people.lastName }}</td>
                        <td><a href="{{ path('edit', { 'id' : people.id }) }}" class="btn btn-warning"><i
                                        class="fa fa-pen"></i></a></td>
                        <td><a href="{{ path('delete', {'id': people.id}) }}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
