{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="col-4 bg-white pt-3 d-flex flex-column">
        <h5>Category</h5>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex gap-5">
            <a href="{{ path('category_list') }}" class="btn btn-info">back to list</a>
            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning">edit</a>
        </div>
    </div>
{% endblock %}
