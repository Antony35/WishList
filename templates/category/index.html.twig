{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-4">
            <table class="col-5 table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>info</th>
                    <th>edit</th>
                    <th>delete</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-info"><i
                                        class="fa fa-info"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning"><i
                                        class="fa fa-pen"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_category_new') }}" class="btn btn-success ms-5">Create new</a>
        </div>
    </div>
{% endblock %}
