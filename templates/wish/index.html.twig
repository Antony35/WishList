{% extends 'base.html.twig' %}

{% block title %}Wish list{% endblock %}

{% block body %}
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-8 p-5">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Detail</th>
                </tr>
                </thead>
                <tbody>
                {% for wish in wishes %}
                    {% if wish.isPublished %}
                        <tr>
                            <td>{{ wish.title }}</td>
                            <td>
                                <a href="{{ path('detail', { 'id' : wish.id }) }}"><i class="fa fa-info"></i></a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
